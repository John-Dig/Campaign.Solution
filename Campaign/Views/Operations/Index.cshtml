@{
  Layout = "_Layout";
}

@using Campaign.Models;

<h1>Operations</h1>

@if (@Model.Count == 0)
{
  <h3>No operations have been added yet!</h3>
} 

<ul>
  @foreach(Operation operation in Model)
  {
    <li>@Html.ActionLink($"{operation.Name}", "Details", new { id = operation.OperationId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new operation", "Create")</p>
<p>@Html.ActionLink("Add new Mission", "Create", "Missions")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>